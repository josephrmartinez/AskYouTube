{
  "manifest_version": 3,
  "name": "AskYouTube",
  "version": "0.1",
  "description": "Perform any task on a YouTube video",
  "icons": {
    "16": "images/chat16.png",
    "32": "images/chat32.png",
    "48": "images/chat48.png",
    "96": "images/chat96.png"
  },
  "permissions": [
    "activeTab", "storage", "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/chat16.png",
      "48": "images/chat48.png",
      "96": "images/chat96.png"
    }
  }
}